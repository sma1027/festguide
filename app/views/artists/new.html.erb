<h1>New Artist</h1>

<%= form_for @artist do |f| %>

<% if user_signed_in? && current_user.admin? %>
<%= f.hidden_field :approved, :value => true %>
<% elsif user_signed_in? %>
<%= f.hidden_field :approved, :value => false %>
<% end %>
<%= f.label :name, 'artist name' %>
<br/>
<%= f.text_field :name %>
<br/>

<%= f.fields_for :instagram_account do |ig| %>
  <%= ig.label :username, 'instagram username' %>
  <br/>
  <%= ig.text_field :username %>
<% end %>
<br/>

<%= f.fields_for :twitter_account do |t| %>
  <%= t.label :username, 'twitter username' %>
  <br/>
  <%= t.text_field :username %>
<% end %>

<br/>
<%= f.label :youtube_username, 'youtube username' %>
<br/>
<%= f.text_field :youtube_username %>
<br/>